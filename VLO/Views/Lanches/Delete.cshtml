@model VLO.Models.Lanche

@{
    ViewBag.Title = "Remover Lanche";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Deseja realmente remover este Lanche?</h3>
<div>
    <h4>Remover Lanche</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.LancheNome, "Lanche:", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LancheNome)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Remover" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
